{% extends './templates/base.njk' %}

{# {% from 'components/b-case-tile.njk' import caseTile %} #}

{% block content %}

	<header class="b-home-header">
		<div class="l-content-container">
			<div class="e-avatar">
				<img src="images/avatar-frame.svg" class="e-avatar__frame" role="presentation">
				<img srcset="images/avatar@2x.jpg 2x" src="images/avatar.jpg" class="e-avatar__image" role="presentation">
			</div>
			<h1 class="b-home-header__heading e-heading e-heading--jumbo">An experienced product designer who blends <em class="e-heading__emphasis">creative</em>, <em class="e-heading__emphasis">strategic</em>, and <em class="e-heading__emphasis">technical</em> expertise to solve complex problems.</h1>
		</div>
		<img src="images/arrow.svg" class="b-home-header__arrow" role="presentation">
	</header>

	<section class="l-experience" id="scroll-trigger">
		<div class="l-content-container">
			<h2 class="e-eyebrow u-small-caps">Background</h2>
			<h3 class="e-heading--l l-experience__heading">Over a decade of experience across a variety of domains</h3>
			<div class="l-experience__grid">
				{% set experience = [
					{
						heading: 'Sales and e-commerce',
						copy: 'From growing small businesses to a bespoke platform for a national retailer.'
					},
					{
						heading: 'Enterprise SaaS',
						copy: 'Content management, case management and workflow tools.'
					},
					{
						heading: 'Booking engines',
						copy: 'Holiday search and booking experiences for multiple leisure and tourism brands.'
					},
					{
						heading: 'Mobile apps',
						copy: 'Consumer mobile apps across different  platforms and diverse industries.'
					},
					{
						heading: 'Digital marketing',
						copy: 'Highly-optimised marketing and campaign websites that drive business metrics.'
					},
					{
						heading: 'AI and biometrics',
						copy: 'AI-powered identity verification mobile apps and web platform.'
					}
				] %}
				{% for example in experience %}
					<div class="l-experience__example">
						<h4 class="l-experience__sub-heading e-heading--s">{{example.heading}}</h4>
						<p class="l-experience__copy">{{example.copy}}</p>
					</div>
				{% endfor %}
			</div>
		</div>

		<div class="l-experience__screens">
			{% set panel1 = [
				'cms-overview',
				'voice-record',
				'navy',
				'ddh-basket-mobile',
				'severfield-home',
				'face-recognition',
				'ddh-products-mobile',
				'cms-listing'
			] %}
			{% set panel2 = [
				'severfield-projects',
				'ddh-home',
				'ddh-account',
				'learnid-instructions',
				'cms-dashboard',
				'learnid-menu',
				'ddh-stockists'
			] %}

			<div class="l-experience__screens-panel" id="panel-1">
				{% for screen in panel1 %}
					<img srcset="images/mini-screens/{{screen}}@2x.jpg 2x" src="images/mini-screens/{{screen}}.jpg" class="l-experience__image" role="presentation">
				{% endfor %}
			</div>
			<div class="l-experience__screens-panel" id="panel-2">
				{% for screen in panel2 %}
					<img srcset="images/mini-screens/{{screen}}@2x.jpg 2x" src="images/mini-screens/{{screen}}.jpg" class="l-experience__image" role="presentation">
				{% endfor %}
			</div>
		</div>
	</section>

	<section class="l-skillset">
		<div class="l-skillset__intro l-content-container l-content-container--6-col">
			<h2 class="e-eyebrow u-small-caps">Expertise</h2>
			<h3 class="l-skillset__heading e-heading--l">A T-shaped skillset</h3>
			<p>I always invest time to learn adjacent skills for the context of a role. This hugely benefits collaboration and has given me a versatile set of skills to bring to the team.</p>
		</div>

		{% set skills = [
			{
				name: 'Product Strategy',
				level: 1,
				alt: 'Experienced enough to contribute'
			},
			{
				name: 'Brand Strategy',
				level: 2,
				alt: 'More than experienced enough to contribute'
			},
			{
				name: 'User Research',
				level: 3,
				alt: 'Nearly experienced enough to lead'
			},
			{
				name: 'UX Design',
				level: 4,
				alt: 'Experienced enough to lead'
			},
			{
				name: 'UI Design',
				level: 5,
				alt: 'More than experienced enough to lead'
			},
			{
				name: 'Front&#8209;end Dev',
				level: 4,
				alt: 'Experienced enough to lead'
			},
			{
				name: 'UX Writing',
				level: 3,
				alt: 'Nearly experienced enough to lead'
			},
			{
				name: 'Graphic Design',
				level: 2,
				alt: 'More than experienced enough to contribute'
			},
			{
				name: 'Digital Marketing',
				level: 1,
				alt: 'Experienced enough to contribute'
			}
		] %}

		<div class="l-content-container">
			<div class="l-skillset__chart b-skillchart">
				<div class="b-skillchart__labels" role="presentation">
					<p class="b-skillchart__label b-skillchart__label--1">Experienced enough to contribute</p>
					<p class="b-skillchart__label b-skillchart__label--2">Experienced enough to lead</p>
				</div>
				<dl class="b-skillchart__skills">
					{% for skill in skills %}
						<div class="b-skillchart__item">
							<dt class="b-skillchart__name b-skillchart__name--{{skill.level}}">{{skill.name|safe}}</dt>
							<dd class="b-skillchart__bar b-skillchart__bar--{{skill.level}}">{{skill.alt}}</dd>
						</div>
					{% endfor %}
				</dl>
			</div>
		</div>
	</section>

{% endblock %}

{% block scripts %}
	<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>
	<script src="js/index.js"></script>
{% endblock %}
